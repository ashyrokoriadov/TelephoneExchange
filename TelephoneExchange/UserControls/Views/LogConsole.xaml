<UserControl x:Class="TelephoneExchange.UserControls.Views.LogConsole"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TelephoneExchange.UserControls.Views"
             mc:Ignorable="d" 
             d:DesignHeight="225" d:DesignWidth="600">
    <GroupBox Header="Консоль логов" HorizontalAlignment="Center" Height="220" VerticalAlignment="Center" Width="590">
        <ScrollViewer>
            <TextBlock Text="{Binding LogMessage}" Margin="5"/>
        </ScrollViewer>
    </GroupBox>
</UserControl>
